<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="750.0" fx:controller="controller.OrderController">
    <stylesheets>
        <URL value="@mx5.css"/>
    </stylesheets>
    
    <HBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label fx:id="titleLbl" styleClass="label-h2"/>
        <Pane HBox.hgrow="ALWAYS"  /> 
    </HBox>
    
    <HBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <TableView prefWidth="600" fx:id="productTv" items="${controller.list}">
            <placeholder> <Label text="No products in order" /> </placeholder>
            <columns>
                <TableColumn text="Name" > 
                    <cellFactory><PropertyValueFactory property="title"/> </cellFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Pane HBox.hgrow="ALWAYS"  /> 
    </HBox>
    
    <Pane VBox.vgrow="ALWAYS"/> 
    
    <HBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Close" onAction="#handleCloseBtn"/>  
        <Pane prefWidth="50" /> 
    </HBox>
    
    <Pane prefHeight="20" /> 
</VBox>
